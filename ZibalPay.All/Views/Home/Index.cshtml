    Layout = "_DefaultLayout";
}

<!--banner strat here-->
<!--فارسی شده توسط مرجع تخصصی برنامه نویسان-->
<div class="banner">
    <div class="container">
        <div class="banner-main">
            <div class="col-md-6 banner-right">
                <a href="/"><img src="/Assets/images/ba.png" alt="" class="img-responsive"></a>
            </div>
            <div class="col-md-6 banner-left simpleCart_shelfItem">
                <span class="bann-heart"> </span>
