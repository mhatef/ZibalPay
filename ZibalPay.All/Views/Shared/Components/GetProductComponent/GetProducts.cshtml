@model List<ZibalPay.Data.Entities.Products.Product>

<div class="home-block">
    <div class="container">
        <div class="home-block-main">
            @foreach (var item in Model)
            {
                <div class="col-md-3 home-grid">
                    <div class="home-product-main">
                        <div class="home-product-top">
                            <a href="/User/Home/AddToCart/@item.ProductId"><img src="/Images/Product/@item.ProductImage" alt="" class="img-responsive zoom-img"></a>
                        </div>
                        <div class="home-product-bottom">
                            <h3>
                                <a href="/User/Home/AddToCart/@item.ProductId">
                                    @item.ProductTitle
                                </a>
                            </h3>
                            <p>@item.ProductDescription</p>
                        </div>
                        <div class="srch">
                            <span>@item.ProductPrice.ToString() ریال</span>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
